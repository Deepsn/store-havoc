{
	"$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
	"files": {
		"ignore": ["services.d.ts"]
	},
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"lineEnding": "crlf",
		"lineWidth": 120
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noShadowRestrictedNames": "off"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	}
}
